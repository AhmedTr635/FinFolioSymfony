<form id="deleteForm" method="post" action="{{ path('app_real_estate_delete', {'id': real_estate.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ real_estate.id) }}">
    <button type="button" class="btn btn-danger" onclick="showDeleteConfirmation()">Supprimer</button>
</form>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function showDeleteConfirmation() {
        // Show the confirmation dialog
        Swal.fire({
            title: 'Confirmation',
            text: 'Are you sure you want to delete this item?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, I am sure',
            cancelButtonText: 'Cancel',
            customClass: {
                confirmButton: 'btn btn-danger me-3',
                cancelButton: 'btn btn-secondary'
            },
            buttonsStyling: false
        }).then((result) => {
            // If confirmed, submit the form
            if (result.isConfirmed) {
                // Submit the form asynchronously
                submitForm();
            }
        });
    }

    function submitForm() {
        // Submit the form
        document.getElementById('deleteForm').submit();
    }
</script>
