                    </div>
                    <div class="form-group" style="display: none">
                        {{ form_label(form.user_id, 'user_id') }}
                        {{ form_widget(form.user_id, {'attr': {'class': 'form-control', 'style': 'width: 200%;'}}) }}
                        {{ form_errors(form.user_id) }}
