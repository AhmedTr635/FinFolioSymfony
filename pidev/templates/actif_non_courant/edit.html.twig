{% extends 'base.html.twig' %}



{% block body %}
    <div class="container">
        <h1>Edit ActifNonCourant</h1>

        <div class="row">
            <div class="col-md-6">
                {# Render the ActifCourant form #}
                <form method="post" action="{{ path('app_actif_non_courant_edit', {'id': actif_non_courant.id}) }}">
                    {{ form_start(form, {'attr': {'class': 'my-form'}}) }}

                    <div class="form-group">
