{% extends 'base1.html.twig' %}

{% block title %}Credit index{% endblock %}

{% block body %}
    <h1>Credit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>InteretMax</th>
                <th>InteretMin</th>
                <th>DateD</th>
                <th>DateF</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for credit in credits %}
            <tr>
                <td>{{ credit.id }}</td>
                <td>{{ credit.montant }}</td>
                <td>{{ credit.interetMax }}</td>
                <td>{{ credit.interetMin }}</td>
                <td>{{ credit.dateD ? credit.dateD|date('Y-m-d') : '' }}</td>
                <td>{{ credit.dateF ? credit.dateF|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_credit_show', {'id': credit.id}) }}">show</a>
                    <a href="{{ path('app_credit_edit', {'id': credit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_credit_new') }}">Create new</a>
{% endblock %}
